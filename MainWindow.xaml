<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1" 
        xmlns:vm ="clr-namespace:WpfApp1.ViewModels"        
        mc:Ignorable="d"
        Title="{Binding Connection}" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:ApplicationViewModel/>
    </Window.DataContext>
        <Grid>
        
        <Button x:Name="button" Command="{Binding LoadCommand}" Content="Load tables" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="130"/>
        <Button x:Name="button1" Command="{Binding Connect2docs}"  Content="Connect" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="130" Height="40" />
        <Label x:Name="label" Content="{Binding Connection}" HorizontalAlignment="Left" Margin="140,1,0,0" VerticalAlignment="Top" Width="357" Height="39"/>

    </Grid>
</Window>
